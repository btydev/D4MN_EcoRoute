<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainfragments.AccountFragment"
    android:background="@drawable/frame_fin_fin">

    <FrameLayout
        android:id="@+id/top_frame"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/back_card_acc"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_settings"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/panton"
                android:textSize="50sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="ИБ"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_acc"/>
            <TextView
                android:fontFamily="@font/panton"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/back_text_light"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="Ильнар Байтеев"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>




    </FrameLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/top_frame"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:fontFamily="@font/panton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Личные данные"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>
        <TextView
            android:fontFamily="@font/panton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="История маршрутов"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>
        <TextView
            android:fontFamily="@font/panton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Активность"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>